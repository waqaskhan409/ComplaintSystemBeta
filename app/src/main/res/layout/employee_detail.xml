<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:id="@+id/sideBorder"
        android:background="@drawable/new_complains_drawables"
        ></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:hint="Employee's Name">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/designation"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:hint="Employee Desgnation">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/department"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:hint="Employee Department">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/totalComplains"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:hint="0 Complains"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/employeeId"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/green"
            android:hint="Employee id">
        </TextView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>