<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="10dp"

        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:id="@+id/allComplains"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/complaintsRemarks"
            android:text="Remarks:"
            android:layout_weight="7"
            android:textColor="@color/black"
            ></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageForSeen"
                android:src="@drawable/not_seen"
                android:layout_weight="1"
                android:textColor="@color/black"
                ></ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/complaintsBody"
            android:text="asjdhaksjhdakjshdkjh"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forward to"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/forwardTo"
            android:background="@drawable/layout_bg"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:maxLength="30"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forward by"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/forwardBy"
            android:background="@drawable/layout_bg"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:maxLength="30"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expected Date"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/expectedDate"
            android:background="@drawable/layout_bg"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:maxLength="30"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            >
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/details"
                ></ImageView>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>