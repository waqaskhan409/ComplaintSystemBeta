<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.complaints.AllComplainsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?android:attr/actionBarSize">
<!--        <ImageView-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:layout_height="120dp"-->
<!--            android:src="@drawable/complains_message"-->
<!--            ></ImageView>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/topbarVerifiedUser"
            android:background="@color/red"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="Please verify your self"
            android:visibility="gone"
            android:padding="5dp"
            ></TextView>
        <ImageView
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="150dp"
            android:src="@drawable/complain_chat"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complains"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="?android:attr/actionBarSize"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/all_complains_drawables"
                android:paddingBottom="10dp"
                android:id="@+id/allComplains"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:id="@+id/allComplainsT"
                    android:src="@drawable/all_complains"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/allc_complains"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        ></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="40dp"
                        android:src="@drawable/all_complains"></ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/new_complains_drawables"
                android:paddingBottom="10dp"
                android:id="@+id/newComplains"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:src="@drawable/all_complains"
                    android:text="0"
                    android:id="@+id/newComplainsT"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Complains"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        ></TextView>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="right"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/new_complains"
                        ></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/pending_complains_drawables"
                android:paddingBottom="10dp"
                android:id="@+id/pendingComplains"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:text="0"
                    android:id="@+id/pendingComplainsT"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Process  "
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        ></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="40dp"
                        android:src="@drawable/pending_complains"></ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/resloved_complains_drawables"
                android:paddingBottom="10dp"
                android:id="@+id/resolvedComplains"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:src="@drawable/all_complains"
                    android:id="@+id/resolvedComplainsT"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resolved  "
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        ></TextView>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="right"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/resolved_complain"
                        ></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"></view>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/pending_complains_drawables"
                android:paddingBottom="10dp"
                android:id="@+id/allFeedBack"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:text="0"
                    android:id="@+id/allFeedBackT"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Process  "
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        ></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="40dp"
                        android:src="@drawable/pending_complains"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/pending_complains_drawables"
                android:paddingBottom="10dp"
                android:id="@+id/positiveFeedBack"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:text="0"
                    android:id="@+id/positiveFeedBackT"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Process  "
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        ></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="40dp"
                        android:src="@drawable/pending_complains"></ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/resloved_complains_drawables"
                android:paddingBottom="10dp"
                android:id="@+id/negativeFeedBack"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:src="@drawable/all_complains"
                    android:id="@+id/negativeFeedBackT"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resolved  "
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        ></TextView>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="right"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/resolved_complain"
                        ></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>